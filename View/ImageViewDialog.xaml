<UserControl x:Class="DicomEditor.View.ImageViewDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DicomEditor.View"
             mc:Ignorable="d" 
             d:DesignHeight="450"
             d:DesignWidth="800"
             MinHeight="450"
             MinWidth="800"
             Background="{StaticResource WindowBackgroundBrush}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.8*"/>
            <RowDefinition Height="0.2*"/>
        </Grid.RowDefinitions>
        <Grid x:Name="CurrentImage"
              Grid.Row="0">
            <Grid.Background>
                <ImageBrush ImageSource="{Binding CurrentImage}" Stretch="Uniform"></ImageBrush>
            </Grid.Background>
        </Grid>
        <Slider x:Name="ImageSlider"
                Grid.Row="1"
                Minimum="0"
                Maximum="{Binding NumberOfImages}"
                Value="{Binding CurrentImageIndex}"/>
    </Grid>
</UserControl>
