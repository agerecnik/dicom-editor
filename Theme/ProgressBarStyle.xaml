<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="ProgressBarStyle"
           TargetType="{x:Type ProgressBar}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ProgressBar}">
                    <Grid>
                        <Border Name="PART_Track" 
                                CornerRadius="0" 
                                Background="{StaticResource ProgressBackgroundBrush}"
                                BorderBrush="{StaticResource ProgressBackgroundBrush}"
                                BorderThickness="1" />
                        <Border Name="PART_Indicator" 
                                CornerRadius="0" 
                                Background="{StaticResource ProgressDoneBrush}" 
                                BorderBrush="{StaticResource ProgressDoneBrush}" 
                                BorderThickness="1" 
                                HorizontalAlignment="Left" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>